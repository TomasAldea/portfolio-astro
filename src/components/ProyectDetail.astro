<style lang="less">
  #proyect-detail {
    height: calc(100vh - 10rem);
    margin-top: 10rem;
    .section-container {
      .videocontainer {
        position: relative;
        width: 50%;
        height: 80vh;
        video {
          width: 100%;
          height: 100%;
          position: absolute;
        }
      }
